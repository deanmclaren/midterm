

<!-- app/views/ideas/show.html.erb -->
<p>
  <%= link_to "home", ideas_path %>
  <%= link_to "edit", edit_idea_path(@idea) %>
</p>
<h1><%= @idea.title %></h1>
<p><%= @idea.body %></p>


<%= form_for [@idea, Comment.new] do |f| %>
   <%= f.text_area :body %><br>
   <%= f.submit %>
<% end %>
<hr>
<% @comment.each do |comment| %>
  <p><%= comment.body %></p>
  <hr>
<% end %>
